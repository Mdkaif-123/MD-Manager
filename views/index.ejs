<%- include('partials/header');-%>
<link rel="stylesheet" href="../css/style.css">
    <!-- ?SUCCESS ALERT BOX  -->
    <% if( message.length> 0) { %>
        <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert" style="
    height: 4rem;
	margin-bottom: 0;
	padding: 0 6%;">
            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:" style="width: 2rem;">
                <use xlink:href="#check-circle-fill" />
            </svg>
            <div>
                <strong>Sucessfully :</strong>
                <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

        </div>
        <% } %>
            <main>
                <div class="dashboard">
                    <div class="container">
                        <h1>Dashboard</h1>
                        <hr>

                        <div class="search-container">
                            <form action="/student/name" method="get">
                            <div class="input-group" style="justify-content: center;">
                                    <div class="form-outline" style="width: 80%">
                                        <input id="search-input" type="search" name="search" id="form1"
                                            class="form-control search-box" placeholder="Search student" />
                                    </div>
                                    <button id="search-button" type="submit" class="btn btn-primary search-btn">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped ">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Branch</th>
                                        <th scope="col">Semester</th>
                                        <th scope="col">Contact</th>
                                        <th scope="col">Paid</th>
                                        <th scope="col">Remaining</th>
                                        <th <%=specialOption%> scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(i=0; i < Students.length; i++ ) { %>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <%= Students[i].name %>
                                            </td>
                                            <td>
                                                <%= Students[i].branch %>
                                            </td>
                                            <td>
                                                <%= Students[i].semester %>
                                            </td>
                                            <td>
                                                <%= Students[i].phoneNo %>
                                            </td>
                                            <td>
                                                <%= Students[i].paid %>
                                            </td>
                                            <td>
                                                <%= Students[i].totalFees-Students[i].paid %>
                                            </td>
                                            <td id="action-btn-container" <%=specialOption%>>
                                                <!-- <form action="/student/delete/<%=Students[i]._id %>?_method=PUT" method="POST">
                                                <button class="action-btn" type="submit"> <i class="fa-solid fa-pen-to-square"></i></button>
                                                </form> -->
                                                <a class="action-btn" href="/student/id/<%=Students[i]._id%>"><i
                                                        class="fa-solid fa-eye "></i></a>
                                                <form action="/student/delete/<%=Students[i]._id %>?_method=DELETE"
                                                    method="POST">
                                                    <button type="submit" class="action-btn"><i
                                                            class="fa-solid fa-trash "></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('partials/footer');-%>